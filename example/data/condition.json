{
    "formId": "com.networknt.light.user.address",
    "version": 1,
    "action" : [
        {
            "category" : "user",
            "name" : "addAddress",
            "readOnly": false,
            "title" : "New"
        }
    ],
    "schema": {
        "type": "object",
        "required": ["delivery"],
        "title": "Address",
        "properties": {
          "delivery": {
            "title": "Select delivery option",
            "type": "string",
            "enum": [
              "S",
              "P"
            ]
          },
          "firstName": {
              "title": "First Name",
              "type": "string"
          },
          "lastName": {
              "title": "Last Name",
              "type": "string"
          },
          "apartmentSuiteNumber": {
              "title": "Apartment/Suite Number",
              "type": "string"
          },
          "address": {
              "title": "Address",
              "type": "string"
          },
          "city": {
              "title": "City",
              "type": "string",
              "description": "Please enter full city name"
          },
          "province": {
              "title": "Province",
              "type": "string",
              "enum": [
                  "AB",
                  "BC",
                  "MB",
                  "NB",
                  "NF",
                  "NS",
                  "NT",
                  "NU",
                  "ON",
                  "PE",
                  "QC",
                  "SK",
                  "YK"
              ]
          },
          "postalCode": {
              "title": "Postal Code",
              "type": "string"
          },
          "country": {
              "title": "Country",
              "type": "string",
              "enum": [
                  "Canada"
              ]
          },
          "phone": {
              "title": "Phone",
              "type": "string",
              "description": "Please include area code"
          },
          "pickupPayment": {
            "title": "Select payment option for pick up order",
            "type": "string",
            "enum": [
              "PickupWithCash",
              "PayNowPickupLater"
            ]
          },
          "pickupAddress": {
            "title": "Select a pickup address",
            "type": "string"
          }
        }
    },
    "form": [
      {
        "key": "delivery",
        "type": "radios",
        "titleMap": [
          {
            "value": "S",
            "name": "Shipping"
          },
          {
            "value": "P",
            "name": "Pickup"
          }
        ]
      },
      {
        "key": "pickupPayment",
        "condition": "model.delivery === 'P'",
        "type": "radios",
        "titleMap": [
          {
            "value": "PickupWithCash",
            "name": "Pick up with Cash"
          },
          {
            "value": "PayNowPickupLater",
            "name": "Pay now and pick up later"
          }
        ]
      },
      {
        "key": "pickupAddress",
        "condition": "model.delivery === 'P' && model.pickupPayment === 'PickupWithCash'",
        "type": "radios",
        "titleMap": [
          {
            "value": "address1",
            "name": "22 Front Street, Toronto ON, P1P1P1"
          },
          {
            "value": "address2",
            "name": "10 King Street, Mississauga ON, L1L1L1"
          }
        ]
      },
      {
        "key": "firstName",
        "condition": "model.delivery === 'S' || model.pickupPayment === 'PayNowPickupLater'"
      },
      {
        "key": "lastName",
        "condition": "model.delivery === 'S' || model.pickupPayment === 'PayNowPickupLater'"
      },
      {
        "key": "apartmentSuiteNumber",
        "condition": "model.delivery === 'S' || model.pickupPayment === 'PayNowPickupLater'"
      },
      {
        "key": "address",
        "condition": "model.delivery === 'S' || model.pickupPayment === 'PayNowPickupLater'"
      },
      {
        "key": "city",
        "condition": "model.delivery === 'S' || model.pickupPayment === 'PayNowPickupLater'"
      },
      {
        "key": "postalCode",
        "condition": "model.delivery === 'S' || model.pickupPayment === 'PayNowPickupLater'"
      },
      {
        "key": "phone",
        "condition": "model.delivery === 'S' || model.pickupPayment === 'PayNowPickupLater'"
      },
      {
        "key": "country",
        "condition": "model.delivery === 'S' || model.pickupPayment === 'PayNowPickupLater'"
      },
      {
        "key": "province",
        "condition": "model.delivery === 'S' || model.pickupPayment === 'PayNowPickupLater'"
      }
    ]
}

